	<% if(session.authenticated && session.User.junta) { %>
		<label for="altaDate">Fecha de Alta</label>
		<input value="<%= user.altaDate %>" name="altaDate" type="date" class="form-control"/>
		<label for="bajaDate">Fecha de Baja</label>
		<input value="<%= user.bajaDate %>" name="bajaDate" type="date" class="form-control"/>
	<% } %>
	<% if(session.authenticated && session.User.junta) { %>
		<% if(user.porlado) { %>
			<label class="checkbox"><input id="porlado" type="checkbox" name="porlado" checked value="seleccionado" /> Porlado</label>
		<% } else { %>
			<label class="checkbox"><input id="porlado" type="checkbox" name="porlado" value="seleccionado" /> Porlado</label>
		<% } %>
	<% } %>
	<% if(session.authenticated && session.User.junta) { %>
		<% if(user.junta) { %>
			<label class="checkbox"><input id="junta" type="checkbox" name="junta" checked value="seleccionado" /> Junta</label>
		<% } else { %>
			
			<label class="checkbox"><input id="junta" type="checkbox" name="junta" value="seleccionado" /> Junta</label>
		<% } %>
	<% } %>
	
	<input type="submit" value="Proceed" class="btn btn-lg btn-primary btn-block"/>
