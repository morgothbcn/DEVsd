	<h2> Hey, you are editing a user... </h2>

	<label for="name">Nombre</label>
	<input value="<%= user.name %>" name="name" type="text" class="form-control"/>
	<label for="lastName">Apellidos</label>
	<input value="<%= user.lastName %>" name="lastName" type="text" class="form-control"/>
	<label for="email">Email</label>
	<input value="<%= user.email %>" name="email" type="text" class="form-control"/>
	<label for="dni">Dni</label>
	<input value="<%= user.dni %>" name="dni" type="text" class="form-control"/>
	
	<label for="phone">Tel√©fono</label>
	<input value="<%= user.phone %>" name="phone" type="number" class="form-control"/>

	<label for="bithDate">Fecha de Nacimiento</label>
